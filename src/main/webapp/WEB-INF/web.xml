<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    id="Spring-SOAP-WS-Sec" version="2.5">

    <display-name>Spring SOAP-base WS Security example</display-name>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>unsecure-ws</servlet-name>
        <servlet-class>org.springframework.ws.transport.http.MessageDispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>password-xwss-ws</servlet-name>
        <servlet-class>org.springframework.ws.transport.http.MessageDispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>signature-xwss-ws</servlet-name>
        <servlet-class>org.springframework.ws.transport.http.MessageDispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>password-wss4j-ws</servlet-name>
        <servlet-class>org.springframework.ws.transport.http.MessageDispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>unsecure-ws</servlet-name>
        <url-pattern>/unsecure/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>password-xwss-ws</servlet-name>
        <url-pattern>/password/xwss/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>signature-xwss-ws</servlet-name>
        <url-pattern>/signature/xwss/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>password-wss4j-ws</servlet-name>
        <url-pattern>/password/wss4j/*</url-pattern>
    </servlet-mapping>

</web-app>
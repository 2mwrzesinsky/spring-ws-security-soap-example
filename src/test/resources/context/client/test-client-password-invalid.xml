<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context.xsd">

    <description>
        Test content for a client which makes use of the password protected WS.
    </description>

    <!-- Properties -->
    <context:property-placeholder
        location="classpath:context/client/test-client-password-invalid.properties" />

    <!-- Client -->
    <bean id="client" class="${client.class}">
        <property name="defaultUri" value="${ws.url}" />
        <property name="marshaller" ref="marshaller" />
        <property name="unmarshaller" ref="marshaller" />
        <property name="interceptors">
            <list>
                <ref bean="securityInterceptor" />
            </list>
        </property>
    </bean>

    <!-- Marshaller -->
    <bean id="marshaller" class="${marshaller.class}">
        <property name="packagesToScan" value="${marshaller.packagesToScan}" />
    </bean>

    <!-- Security interceptor -->
    <bean id="securityInterceptor" class="${interceptor.security.class}">
        <property name="policyConfiguration" value="${security.file.path}" />
        <property name="callbackHandlers">
            <list>
                <ref bean="passwordValidationHandler" />
            </list>
        </property>
    </bean>

    <!-- Password validation callback handler -->
    <bean id="passwordValidationHandler" class="${callbackHandler.password.class}">
        <property name="userDetailsService" ref="securityService"/>
    </bean>

    <!-- Security service -->
    <bean id="securityService" class="${service.security.class}"/>

</beans>
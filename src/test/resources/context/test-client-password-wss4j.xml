<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context.xsd">

    <description>
        Test content for a client which makes use of the password
        protected WS.
    </description>

    <!-- Properties -->
    <context:property-placeholder
        location="classpath:context/test-client-password-wss4j.properties" />

    <!-- Client -->
    <bean id="client" class="${client.class}">
        <constructor-arg ref="messageFactory" />
        <property name="defaultUri" value="${ws.url}" />
        <property name="marshaller" ref="marshaller" />
        <property name="unmarshaller" ref="marshaller" />
        <property name="interceptors" ref="securityInterceptor" />
    </bean>

    <!-- Message factory -->
    <bean id="messageFactory" class="${messageFactory.class}" />

    <!-- Marshaller -->
    <bean id="marshaller" class="${marshaller.class}">
        <property name="packagesToScan" value="${marshaller.packagesToScan}" />
    </bean>

    <!-- Security interceptor -->
    <bean id="securityInterceptor" class="${interceptor.security.class}">
        <property name="securementActions" value="${security.actions}" />
        <property name="securementUsername" value="${security.user}" />
        <property name="securementPassword" value="${security.password}" />
    </bean>

</beans>